                                        <h4><a href="#"><%= blog.title %></a></h4>
                                        <ul class="news-meta">
                                            <li><span class="lnr lnr-clock"></span><%= blog.date %></li>
                                        </ul>
                                    </div>
                                </div>
                            <% }) %>
