    <!-- Start Blog Page Section -->
    <section class="single-blog-with-sidebar single-blog-page padding-100">
        <div class="container">
            <div class="row">
                <!-- Start All Blogs -->
                <div class="col-md-12 col-lg-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="blog-box">
                                <div class="blog-img">
                                    <img src="<%= blog.bg %>" class="img-fluid" alt="">
                                </div>
                                <div class="blog-details">
                                    <div class="space-15"></div>
                                    <h3><%= blog.title %></h3>
                                    <div class="space-15"></div>
                                    <ul class="news-meta">
                                        <li><span class="lnr lnr-user"></span> By Horizon</li>
                                        <li><span class="lnr lnr-clock"></span> <%= blog.date %></li>
                                    </ul>
                                    <div class="space-15"></div>

                                    <p>
                                        <%= blog.content %>
                                    </p>

                                    <blockquote>
                                        <p>“Lorem ipsum dolor sit amet consectetur adipisicing elit. Eius velit quaerat
                                            fuga praesentium ut!”</p>
                                    </blockquote>

                                </div>
                                <hr>
                                <div class="post-tag-area d-md-flex justify-content-between align-items-center">
                                    <ul class="share-icon">
                                        <li>Share:</li>
                                        <li><a href="#"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                                        <li><a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                                    </ul>
                                    <ul class="tags">
                                        <li>Tags:</li>
                                        <li><a href="#">Horizon,</a></li>
                                        <li><a href="#">Lenses,</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="comments-container">
                                <h3>1 Comment & 1 Reply</h3>
                                <div class="space-15"></div>
                                <ul class="comments-list">
                                    <li class="d-flex align-items-top">
                                        <figure>
                                            <img src="https://via.placeholder.com/80x80" class="img-fluid" alt="">
                                        </figure>
                                        <div>
                                            <h4>Horizon Follower</h4>
                                            <h6>01 Jan 2025</h6>
                                            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Officia ut
                                                delectus nihil minus aperiam deserunt!</p>
                                            <a href="#" class="reply"><i class="fas fa-reply"></i> Reply</a>
                                        </div>
                                    </li>
                                    <li class="d-flex align-items-top comment-reply">
                                        <figure>
                                            <img src="https://via.placeholder.com/80x80" class="img-fluid" alt="">
                                        </figure>
                                        <div>
                                            <h4>Horizon</h4>
                                            <h6>01 Jan 2025</h6>
                                            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Tempore
                                                explicabo consectetur debitis saepe nisi, iste animi est quaerat, quo,
                                                error nihil sapiente? Ullam harum aut quos, quo quasi sequi a.</p>
                                            <a href="#" class="reply"><i class="fas fa-reply"></i> Reply</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <div class="comments-form">
                                <h3>Leave A Reply</h3>
                                <div class="space-15"></div>
                                <form>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <input type="text" class="form-control"
                                                        placeholder="Enter Your Name">
                                                    <span class="focus-border"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <input type="email" class="form-control"
                                                        placeholder="Enter Your Email">
                                                    <span class="focus-border"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <textarea class="form-control" rows="4"
                                                        placeholder="Enter Your Message"></textarea>
                                                    <span class="focus-border"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="space-25"></div>
                                                <button type="submit"
                                                    class="btn btn-primary shadow btn-colord btn-theme"><span>Post
                                                        Comment</span></button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End All Blogs -->
                <!-- 








                    
                 -->
